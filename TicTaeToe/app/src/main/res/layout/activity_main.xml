<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <LinearLayout
            android:id="@+id/turnLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            android:visibility="gone"
            android:layout_marginLeft="10dp">
            <TextView
                android:id="@+id/turnText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Turn:"
                android:textStyle="bold"
                android:textSize="18sp">

            </TextView>
            <TextView
                android:id="@+id/playerTurn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:layout_marginLeft="5dp"
                android:textSize="18sp">
            </TextView>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/winLayoutPlayer1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            android:visibility="gone"
            android:layout_marginLeft="10dp">
            <TextView
                android:id="@+id/winsText1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Wins Player 1:"
                android:textStyle="bold"
                android:textSize="18sp">

            </TextView>
            <TextView
                android:id="@+id/winPlayer1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:layout_marginLeft="5dp"
                android:textSize="18sp">
            </TextView>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/winLayoutPlayer2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            android:visibility="gone"
            android:layout_marginLeft="10dp">
            <TextView
                android:id="@+id/winsText2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Wins Player 2:"
                android:textStyle="bold"
                android:textSize="18sp">

            </TextView>
            <TextView
                android:id="@+id/winPlayer2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:layout_marginLeft="5dp"
                android:textSize="18sp">
            </TextView>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        android:id="@+id/tableLayout">
        <LinearLayout
            android:id="@+id/winnerLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="50dp"
            android:layout_marginLeft="10dp">
            <TextView
                android:id="@+id/winnerText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:text=""
                android:visibility="gone"
                android:textSize="18sp">
            </TextView>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <Button
                android:layout_width="90dp"
                android:layout_height="70dp"
                android:textSize="18sp"
                android:id="@+id/button1"/>
            <Button
                android:layout_width="90dp"
                android:layout_height="70dp"
                android:textSize="18sp"
                android:id="@+id/button2"/>
            <Button
                android:layout_width="90dp"
                android:layout_height="70dp"
                android:textSize="18sp"
                android:id="@+id/button3"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <Button
                android:layout_width="90dp"
                android:layout_height="70dp"
                android:textSize="18sp"
                android:id="@+id/button4"/>
            <Button
                android:layout_width="90dp"
                android:layout_height="70dp"
                android:textSize="18sp"
                android:id="@+id/button5"/>
            <Button
                android:layout_width="90dp"
                android:layout_height="70dp"
                android:textSize="18sp"
                android:id="@+id/button6"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <Button
                android:layout_width="90dp"
                android:layout_height="70dp"
                android:textSize="18sp"
                android:id="@+id/button7"/>
            <Button
                android:layout_width="90dp"
                android:layout_height="70dp"
                android:textSize="18sp"
                android:id="@+id/button8"/>
            <Button
                android:layout_width="90dp"
                android:layout_height="70dp"
                android:textSize="18sp"
                android:id="@+id/button9"/>
        </LinearLayout>
    </LinearLayout>
    <Button
        android:layout_width="90dp"
        android:layout_height="70dp"
        android:id="@+id/start"
        android:text="Start"
        android:layout_alignBottom="@+id/tableLayout"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="10dp"
        android:backgroundTint="@android:color/holo_blue_light"
        android:textColor="@android:color/white"
        android:layout_marginRight="10dp"/>

    <Button
        android:layout_width="90dp"
        android:layout_height="70dp"
        android:id="@+id/reset"
        android:text="Reset"
        android:layout_alignBottom="@+id/tableLayout"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="10dp"
        android:layout_marginRight="10dp"
        android:backgroundTint="@android:color/holo_blue_light"
        android:textColor="@android:color/white"
        android:visibility="gone"/>
</RelativeLayout>